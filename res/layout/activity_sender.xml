<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center" >

        <uni.oulu.fingertracker.ui.DirectionImageButton
            android:id="@+id/ibUpLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:tag="@string/UpLeft"
            android:src="@drawable/up_left" />

        <uni.oulu.fingertracker.ui.DirectionImageButton
            android:id="@+id/ibUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:tag="@string/Up"
            android:src="@drawable/up" />

        <uni.oulu.fingertracker.ui.DirectionImageButton
            android:id="@+id/ibUpRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:tag="@string/UpRight"
            android:src="@drawable/up_right" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center" >

        <uni.oulu.fingertracker.ui.DirectionImageButton
            android:id="@+id/ibLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:tag="@string/Left"
            android:src="@drawable/left" />

        <uni.oulu.fingertracker.ui.DirectionImageButton
            android:id="@+id/ibNone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/start" />

        <uni.oulu.fingertracker.ui.DirectionImageButton
            android:id="@+id/ibRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:tag="@string/Right"
            android:src="@drawable/right" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center" >

        <uni.oulu.fingertracker.ui.DirectionImageButton
            android:id="@+id/ibDownLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:tag="@string/DownLeft"
            android:src="@drawable/down_left" />

        <uni.oulu.fingertracker.ui.DirectionImageButton
            android:id="@+id/ibDown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:tag="@string/Down"
            android:src="@drawable/down" />

        <uni.oulu.fingertracker.ui.DirectionImageButton
            android:id="@+id/ibDownRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:tag="@string/DownRight"
            android:src="@drawable/down_right" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center" >

        <uni.oulu.fingertracker.ui.DirectionImageButton
            android:id="@+id/ibConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:tag="@string/Confirm"
            android:src="@drawable/confirmation" />
        
        <uni.oulu.fingertracker.ui.DirectionImageButton
            android:id="@+id/ibCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:tag="@string/Reject"
            android:src="@drawable/cancel" />

    </LinearLayout>

</LinearLayout>
